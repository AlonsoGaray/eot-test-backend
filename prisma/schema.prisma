// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL")
}

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  password  String   
  name      String
  cards     UserCard[]
}

model Card {
  id          String     @id @unique
  name        String
  description Json
  image       String
  users       UserCard[]
}

model UserCard {
  id      Int   @id @default(autoincrement())
  userId  Int
  cardId  String
  amount  Int
  user    User   @relation(fields: [userId], references: [id])
  card    Card   @relation(fields: [cardId], references: [id])
}